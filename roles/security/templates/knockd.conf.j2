[options]
    UseSyslog

[openSSH]
    sequence = {{ knockd_open_ssh_seq }}
    seq_timeout = 5
    start_command = ufw allow from %IP% to any port 22
 
[tmpOpenSSH]
    sequence = {{ knockd_tmp_open_ssh_seq }}
    seq_timeout = 5
    start_command = ufw allow from %IP% to any port 22
    tcpflags = syn
    cmd_timeout = 10
    stop_command = ufw delete allow from %IP% to any port 22

[closeSSH]
    sequence = {{ knockd_close_ssh_seq }}
    seq_timeout = 5
    start_command = ufw delete allow from %IP% to any port 22
